<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context=".helper.HelperActivity">

    <include layout="@layout/title_bar_helper" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">


                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/xxx" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_serialport"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    </LinearLayout>

                    <EditText
                        android:id="@+id/EditTextaccept"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:layout_margin="@dimen/dp2"
                        android:background="@drawable/shape"
                        android:cursorVisible="false"
                        android:editable="false"
                        android:textColorHint="#ffff00"
                        android:padding="8dp"
                        android:textSize="14sp"></EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_serialport"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <EditText
                        android:id="@+id/EditTextsend"
                        android:layout_width="match_parent"
                        android:layout_height="165dp"
                        android:layout_margin="@dimen/dp2"
                        android:background="@drawable/shape"
                        android:includeFontPadding="true"
                        android:padding="8dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/send"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:background="@color/black"
                            android:includeFontPadding="false"
                            android:text="@string/send"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/set"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="@string/setpbp"
                            android:textSize="15sp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/close"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/close"
                            android:textSize="15sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="46dp"
                android:text="@string/acceptpart" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="28dp"
                android:button="@null"
                android:drawableRight="@drawable/checkbox_style"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:text="@string/CheckBox1"
                android:textSize="24dp" />

            <Button
                android:id="@+id/clear"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:text="@string/clear" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="262dp"
                android:gravity="center"
                android:text="@string/sentpart" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="243dp"
                android:button="@null"
                android:drawableRight="@drawable/checkbox_style"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:text="@string/CheckBox2"
                android:textSize="24dp" />
            <!-- android:layout_toRightOf="@+id/layout_11" -->

            <Button
                android:id="@+id/button1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="245dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="14dp"
                android:background="@null"
                android:text="@string/clear"
                android:textSize="14dp" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>